{
	// 页面路由
	"pages": [{
			"path": "pages/index/index",
			// 设置每个页面的状态栏、导航条、标题、窗口背景色等（会覆盖 globalStyle 全局样式）
			"style": {
				"navigationBarTitleText": "首页", // 导航栏标题文本
				"navigationBarTextStyle": "black", // 导航栏标题文字颜色
				"navigationBarBackgroundColor": "#F8F8F8", // 导航栏背景颜色
				"backgroundColor": "#F00", // 窗口的背景色（没起作用）
				// "navigationStyle": "custom" // 原导航栏隐藏了，可以自定义
				"enablePullDownRefresh": true
				// "backgroundTextStyle": "white"
			}
		},
		{
			"path": "pages/list/list",
			"style": {
				"navigationBarTitleText": "列表",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/tabBar/tabBar",
			"style": {
				"navigationBarTitleText": "tabBar API",
				"enablePullDownRefresh": false
			}
		},
		{
			"path" : "pages/pageLifeCycle/pageLifeCycle",
			"style" : 
			{
				"navigationBarTitleText" : "(页面)生命周期",
				"enablePullDownRefresh" : false
			}
		},
		{
			"path" : "pages/test/test",
			"style" : 
			{
				"navigationBarTitleText" : "测试",
				"enablePullDownRefresh" : false
			}
		},
		{
			"path" : "pages/containerComponent/view",
			"style" : 
			{
				"navigationBarTitleText" : "view 组件",
				"enablePullDownRefresh" : false
			}
		}
	],
	// 状态栏、导航条、标题、窗口背景色等
	"globalStyle": {
		"navigationBarTitleText": "演示", // 导航栏标题文字内容
		"navigationBarTextStyle": "black", // 导航栏标题文字颜色
		"navigationBarBackgroundColor": "#F8F8F8", // 导航栏背景颜色
		"backgroundColor": "#F00", // 窗口的背景色（没起作用）
		// 引用小程序组件
		"usingComponents": {
			// "collapse-tree-item": "/components/collapse-tree-item"
		},
		"renderingMode": "seperated", // 仅微信小程序，webrtc 无法正常时尝试强制关闭同层渲染
		"pageOrientation": "portrait", //横屏配置，全局屏幕旋转设置(仅 APP/微信/QQ小程序)，支持 auto / portrait / landscape
		"rpxCalcMaxDeviceWidth": 960,
		"rpxCalcBaseDeviceWidth": 375,
		"rpxCalcIncludeWidth": 750,
		"onReachBottomDistance": 100 // 页面上拉触底事件触发时距页面底部距离
	},
	"uniIdRouter": {},
	// 底部菜单（API：https://uniapp.dcloud.net.cn/api/ui/tabbar.html#hidetabbar）
	"tabBar": {
		"list": [{
				"pagePath": "pages/index/index",
				"text": "首页",
				"iconPath": "static/01_1.png",	
				"selectedIconPath": "static/01_2.png"
				// "iconfont": '' // 配置字体图标，详见文档
			},
			{
				"pagePath": "pages/list/list",
				"text": "列表",
				"iconPath": "static/01_1.png",
				"selectedIconPath": "static/01_2.png"
			},
			{
				"pagePath": "pages/tabBar/tabBar",
				"text": "tabBar"
			}
			// {
			// 	"pagePath": "pages/lifeCycle/lifeCycle",
			// 	"text": "生命周期"
			// }
		],
		"color": "#333",	// 文字颜色
		"selectedColor": "#f00", // 文字选中颜色
		"borderStyle": "black", // 上边框的颜色
		"backgroundColor": "#fff",	// 背景颜色
		"height": "50px",
		"fontSize": "10px",
		"iconWidth": "24px",
		"spacing": "0px",
		// 中间按钮，仅在list项为偶数时有效
		// uni.onTabBarMidButtonTap(callback)，监听中间按钮的点击事件
		"midButton": {
			"width": "80px",
			"height": "50px",
			"text": "+",
			"iconPath": "static/add.png",
			"iconWidth": "24px"
		}
	}
}